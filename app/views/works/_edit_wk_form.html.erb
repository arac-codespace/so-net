<%= form_for @work, remote: true, url: work_path(id: @work.id), :html => { :multipart => true } do |f| %>

  <div class= "form-group">
    <%= f.label :company, "Company" %>
    <%= f.text_field :company, class: "form-control" %>
  </div>   
  
  <div class = "form-group">
    <%= f.label :industry %>
    <%= f.text_field :industry, class: "form-control" %>
  </div>  
  
  <div class = "form-group">
    <%= f.label :job_title %>
    <%= f.text_field :job_title, class: "form-control" %>
  </div>
  
  <div class= "form-group">
    <%= f.label :start_date, "Start Date" %> 
    <%= f.date_select(:start_date, :order => [:month, :day, :year], start_year: 1960) %>
  </div>  
  
  <div class= "form-group">
    <%= f.label :end_date, "Finish Date" %> 
    <%= f.date_select(:end_date, :order => [:month, :day, :year], start_year: 1960) %>
  </div>    
  
  <div class = "form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>    
  
  <div class="modal-footer">
    <div class = "form-group">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= link_to work_path(id: @work), method: :delete, data: {confirm: "Borrar este articulo?"}, class: "btn btn-default" do %>
        <i class="fa fa-trash-o" aria-hidden="true"> Delete </i>
      <% end %>        
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    </div>
  </div>  
  
<% end %>
