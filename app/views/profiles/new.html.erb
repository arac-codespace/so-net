<h1> Form for creating a new post!</h1>
<!--multipart is for file upload! -->
<%= @current_user_id.id %>

<%= form_for @user_info, url: profiles_path, :html => { :multipart => true } do |f| %>
  
  <%= f.hidden_field :user_id, value: @current_user_id.id %>   
  
  <div class = "form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control" %>
  </div>  
  
  <div class = "form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>  
  
  <div class = "form-group">
    <%= f.label :summary %>
    <%= f.text_field :summary, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>    
  

  <div class = "form-group">
    <%= f.submit "Add new Fossil", class: 'btn btn-primary' %>
  </div>
  
<% end %>