<h1> Edit Profile</h1>
<!--multipart is for file upload! -->

<%= form_for @user_info, url: profile_path, :html => { :multipart => true } do |f| %>
  
  <div class = "form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control" %>
  </div>  
  
  <div class = "form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>  
  
  <div class = "form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, class: "form-control" %>
  </div>
  
  <div class = "form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>    
  

  <div class = "form-group">
    <%= f.submit "Add new Fossil", class: 'btn btn-primary' %>
  </div>
  
<% end %>