<% @education.each do |e| %>


  <%= form_for e, remote: true, url: education_path, :html => { :multipart => true } do |f| %>
    
    <div class= "form-group">
      <%= f.label :school, "School/University" %>
      <%= f.text_field :school, class: "form-control" %>
    </div>   
    
    <div class = "form-group">
      <%= f.label :degree %>
      <%= f.text_field :degree, class: "form-control" %>
    </div>  
    
    <div class = "form-group">
      <%= f.label :field %>
      <%= f.text_field :field, class: "form-control" %>
    </div>
    
    <div class = "form-group">
      <%= f.label :grade %>
      <%= f.text_field :grade, class: "form-control" %>
    </div>  
    
    <div class= "form-group">
      <%= f.label :start_date, "Start Date" %> 
      <%= f.date_select(:start_date, :order => [:month, :day, :year], start_year: 1960) %>
    </div>  
    
    <div class= "form-group">
      <%= f.label :end_date, "Finish Date" %> 
      <%= f.date_select(:end_date, :order => [:month, :day, :year], start_year: 1960) %>
    </div>    
    
    <div class = "form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>    
    
  <div class="modal-footer">
    <div class = "form-group">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= link_to education_path(id: e), method: :delete, data: {confirm: "Borrar este articulo?"}, class: "btn btn-default" do %>
        <i class="fa fa-trash-o" aria-hidden="true"> Delete </i>
      <% end %>        
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    </div>
  </div>  
    
  <% end %>
<% end %>  
  