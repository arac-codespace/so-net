<!-- JQuery uses this to attach/remove the corresponding entry when actions are run -->
<div id= "education_<%= education.id%>">
  <h5 id='school-field'> <%= education.school %></h5>
  <h5 id='degree-field'> <%= education.degree %>, <%= education.field %> </h5>
  <h5 id='grade-field'> Grade: <%= education.grade %></h5>
  <h5 id='start_date-field'> From: <%= education.start_date %> To: <%= education.end_date %></h5>
  <h5 id='description-field'> <%= education.description %></h5>

  <!-- Path ids are user ids.  Row_id is a query string used to make record_id avaible for edit view -->
<%= link_to 'Edit', edit_education_path(education.user_id, row_id: education.id), remote: true, :class => 'btn btn-sm btn-info' %>
<%= link_to 'Delete', education, remote: true, :method => :delete, data: {confirm: "Delete?"}, :class => 'btn btn-sm btn-danger' %>
    
</div>