

<div id= "education_<%= education.id%>">
  
  <div id='school-field' class='section-subheader'> 
    <h4><strong><%= education.school %></strong></h4>
    <!-- Path ids are user ids.  Row_id is a query string used to make record_id avaible for edit view -->
    <% if user_signed_in? && current_user.id == education.user_id%>
      <%= link_to edit_education_path(education.user_id, row_id: education.id), remote: true, :class => 'btn btn-default' do %>
        <i class='glyphicon glyphicon-pencil'></i>
      <% end %>
    <% end %>  
  </div>
  
  <div id='degree-field'> <h5><%= education.degree %>, <%= education.field %></h5> </div>
  <div id='grade-field'> <h5>Grade: <%= education.grade %></h5></div>
  <div id='start_date-field'> <h5>From: <%= education.start_date %> To: <%= education.end_date %></h5></div>
  <div id='description-field'> <h5><%= education.description %></h5></div>


</div>