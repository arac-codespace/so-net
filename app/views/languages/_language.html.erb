<!-- JQuery uses this to attach/remove the corresponding entry when actions are run -->
<div id= "language_<%= language.id%>">
  
  <div id='language-field' class='section-subheader'> 
    <h4><strong><%= language.language_name %></strong></h4>
    <!-- Path ids are user ids.  Row_id is a query string used to make record_id avaible for edit view -->
    <% if user_signed_in? && current_user.id == language.user_id %>
      <%= link_to edit_language_path(language.user_id, row_id: language.id), remote: true, :class => 'btn btn-default' do %>
        <i class='glyphicon glyphicon-pencil'></i>
      <% end %>
    <% end %>  
  </div>


</div>